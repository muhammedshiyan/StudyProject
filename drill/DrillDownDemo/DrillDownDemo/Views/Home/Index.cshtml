    <script>
        $(document).ready(function () {
            $(".expand-btn").click(function () {
                var row = $(this).closest("tr");
                var expandRow = row.next(".expand");

                if (expandRow.is(":visible")) {
                    expandRow.hide();
                    $(this).text("Expand");
                } else {
                    expandRow.show();
                    $(this).text("Collapse");
                }
            });
        });
    </script>

</body>
</html>
