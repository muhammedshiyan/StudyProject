@model List<Employee>

<h1>Subordinates of Manager</h1>

@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subordinate in Model)
            {
                <tr>
                    <td>@subordinate.EmployeeId</td>
                    <td>@subordinate.FirstName</td>
                    <td>@subordinate.LastName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No subordinates found for this manager.</p>
}

